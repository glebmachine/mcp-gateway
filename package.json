{
  "name": "mcp-gateway",
  "version": "1.0.0",
  "description": "Exposes local MCP servers to WSL, Docker, and remote machines",
  "author": "Gleb Mikheev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glebmachine/mcp-gateway.git"
  },
  "bugs": {
    "url": "https://github.com/glebmachine/mcp-gateway/issues"
  },
  "homepage": "https://github.com/glebmachine/mcp-gateway#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "wsl",
    "docker",
